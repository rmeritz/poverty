<%=form_for @salary do | form | %>
<%=@salary.errors.full_messages.join%>
<%=form.text_field :amount %>
<%=form.submit 'Find out' %>
<%end %> 

<%content_for :javascript do %>
<%=javascript_tag do %>
$("#salary_amount").priceFormat({
    prefix: '',
    thousandsSeparator: ',',
    centsLimit: 0,
    centsSeparator: ''
});

<%end %>
<%end %>

